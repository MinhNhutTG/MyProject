extends ../../layouts/default.pug 

block main 
  .container.mt-5
      // Tiêu đề
      h4.mb-4 Thêm mới Nhóm quyền

      // Form
      form(action=`${prefixAdmin}/roles/create` method="POST")
        .mb-3
          label.form-label(for="title") Tên nhóm quyền
          input#name.form-control(type="text" name="title" placeholder="Nhập tên nhóm quyền..." required)

        .mb-3
          label.form-label(for="description") Mô tả ngắn
          textarea#description.form-control(name="description" rows="3" placeholder="Nhập mô tả ngắn...")

        // Nút hành động
        .d-flex.gap-2
          button.btn.btn-success(type="submit") 💾 Lưu
          a.btn.btn-secondary(href="/roles") ← Hủy