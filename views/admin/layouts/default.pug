doctype html
html(lang="en")
    head
      meta(charset="UTF-8")
      meta(
        content="width=device-width, initial-scale=1.0" 
        name="viewport"
        )
      title Admin Dashboard - Shop Quần Áo
      link(
        rel="stylesheet" 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        )
      link(
        rel="stylesheet" 
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
        )
      link(
        href="/admin/css/style.css" 
        rel="stylesheet"
        )
      script( src="https://cdn.tiny.cloud/1/vfpgg78wl2n9finpjpzillj5c6m6j1j0nxgng454mvkv0n2u/tinymce/8/tinymce.min.js" referrerpolicy="origin" crossorigin="anonymous" )

    body 
      include ../partials/header.pug    

      .d-flex
          nav#sidebar.bg-dark.text-white.p-3.vh-100(style="width: 250px;")
            .text-center.mb-4
              img.img-fluid.rounded-circle(
                width="80" 
                alt="Logo" 
                src="/img/MrBeast-Logo.png"
                )
              h4.mt-2 Admin Panel
            ul.nav.flex-column
              li.nav-item
                a.nav-link.text-white(href= prefixAdmin + "/Dashboard")
                  i.fa-solid.fa-shapes.me-2
                  | Tổng quan
              li.nav-item
                a.nav-link.text-white(href= prefixAdmin +"/category")
                  i.fas.fa-chart-line.me-2
                  | Danh mục
              li.nav-item
                a.nav-link.text-white(href= prefixAdmin +"/products")
                  i.fas.fa-tshirt.me-2
                  | Sản phẩm
              li.nav-item
                a.nav-link.text-white(href= prefixAdmin + "/roles")
                  i.fa-solid.fa-user-tie.me-2 
                  | Nhóm quyền
              li.nav-item
                a.nav-link.text-white(href= prefixAdmin + "/roles/permission")
                  i.fa-solid.fa-circle-user.me-2 
                  | Phân quyền
              li.nav-item
                a.nav-link.text-white(href="#")
                  i.fas.fa-shopping-cart.me-2
                  | Đơn hàng
              li.nav-item
                a.nav-link.text-white(href="#")
                  i.fas.fa-users.me-2
                  | Khách hàng
              li.nav-item
                a.nav-link.text-white(href="#")
                  i.fas.fa-cog.me-2
                  | Cài đặt
              li.nav-item
                a.nav-link.text-white(href= prefixAdmin +"/products/trash")
                  i.fas.fa-tshirt.me-2
                  | Thùng rác
          
          .container.shadow
            block main
               
      include ../partials/footer.pug
     
      script(src="/admin/js/script.js")
      script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js' integrity='sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q' crossorigin='anonymous')
